@model AccountRecoveryMailTemplate
@{
    Layout = Model.GetLayoutFilePathForHtmlTemplate();
}

<h2>Hello @Model.User.DisplayName</h2>

<p>
    We have received a request to reset the password for your member account on
    the @Model.ApplicationName site. To do this click the following link:
</p>

<p>
    <a href="@Model.RecoveryUrl">Reset Password</a>
</p>