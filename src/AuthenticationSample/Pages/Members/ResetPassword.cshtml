@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}


<div class="row justify-content-center">
    <form method="post" class="col col-8">
        <h1 class="mb-4">Reset Password</h1>
        @if (Model.IsSuccess)
        {
            <p class="alert alert-success">Your password has been updated.</p>

            <p>
                <a asp-page="SignIn">Click here to sign in</a>
            </p>
        }
        else if (Model.TokenValidationResult != null && !Model.TokenValidationResult.IsSuccess)
        {
            <p>@Model.TokenValidationResult.Error.Message</p>
        }
        else
        {

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control">
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="mb-3 text-danger"></div>

            <button type="submit" class="btn btn-primary">Change password</button>
        }
    </form>
</div>